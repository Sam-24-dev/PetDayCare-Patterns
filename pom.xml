<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    
    <groupId>ec.edu.espol</groupId>
    <artifactId>PetDayCare-Patterns</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <!-- Si prefieres usar source/target puedes cambiarlos,
             pero con Java moderno es mejor usar <release> en el plugin -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>5.13.4</junit.version>
        <mockito.version>5.18.0</mockito.version>
        <maven.compiler.release>24</maven.compiler.release>
        <exec.mainClass>ec.edu.espol.petdaycare.patterns.PetDayCarePatterns</exec.mainClass>
    </properties>

    <dependencies>
        <!-- JUnit 5 (Jupiter) - dependencia "aggregada" para tests -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Mockito core para mocks -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>${mockito.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Integración Mockito + JUnit Jupiter (permite usar @ExtendWith(MockitoExtension.class),
             @Mock, @InjectMocks de forma cómoda) -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <version>${mockito.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Compiler plugin: fuerza release 24 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>${maven.compiler.release}</release>
                </configuration>
            </plugin>

            <!-- Surefire plugin para ejecutar tests con JUnit Platform -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.5.3</version>
                <!-- normalmente no necesitas configuración extra;
                     si NetBeans no detecta tests, coméntame y te doy ajustes -->
            </plugin>
        </plugins>
    </build>
</project>
